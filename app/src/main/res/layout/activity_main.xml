<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="samux.cinematic.MainActivity"
    android:background="@drawable/cinema">

    <EditText
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:gravity="center"
        android:hint="Correo Electronico"
        android:textColor="@color/bright_foreground_disabled_material_dark"
        android:textColorHint="@color/bright_foreground_disabled_material_dark"
        android:id="@+id/email"
        android:layout_above="@+id/password"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:gravity="center"
        android:hint="*********"
        android:textColor="@color/bright_foreground_disabled_material_dark"
        android:textColorHint="@color/bright_foreground_disabled_material_dark"
        android:id="@+id/password"
        android:layout_above="@+id/registro"
        android:layout_alignStart="@+id/email"
        android:layout_marginBottom="148dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ingresar"
        android:id="@+id/login"
        android:layout_marginTop="57dp"
        android:layout_alignTop="@+id/password"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:onClick="registro"
        android:textColor="@color/bright_foreground_disabled_material_dark"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="¿No posees una cuenta?, creala aquí"
        android:id="@+id/registro"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
